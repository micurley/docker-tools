{
  "npm": {
    "publish": false
  },
  "git": {
    "changelog": "npx auto-changelog --stdout --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "draft": false
  },
  "hooks": {
    "after:bump": "npx auto-changelog"
  }
}
